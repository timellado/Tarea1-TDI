<h2>Pel√≠cula </h2>
<h1><%= @film["title"] %></h1>

<table>
  <thead>
    <th>Nombre</th>
    <th>Episodio</th>
    <th>Director</th>
    <th>Productor(es)</th>
    <th>Fecha lanzamiento</th>
  </thead>
  <tbody>
    <tr>
      <td class="hover"><%= link_to @film["title"], {controller: "app", action: "film", url: @film["url"]} %></td>
      <td><%= @film["episode_id"] %></td>
      <td class="hover"><%= @film["director"] %></td>
      <td class="hover"><%= @film["producer"] %></td>
      <td><%= @film["release_date"] %></td>
    </tr>
  </tbody>
</table>
<table>
  <thead>
    <th>Personajes</th>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <td class="hover"><%= link_to person[:name], {controller: "app", action: "person", url: person[:url]} %></td>
    <% end %>
  </tbody>
</table>
<table>
  <thead>
    <th>Planetas</th>
  </thead>
  <tbody>
      <% @planets.each do |planet| %>
      <td class="hover"><%= link_to planet[:name], {controller: "app", action: "planet", url: planet[:url]} %></td>
      <% end %>
  </tbody>
</table>
<table>
  <thead>
    <th>Naves</th>
  </thead>
  <tbody>
      <% @starships.each do |starship| %>
      <td class="hover"><%= link_to starship[:name], {controller: "app", action: "starship", url: starship[:url]} %></td>
      <% end %>
  </tbody>
</table>
